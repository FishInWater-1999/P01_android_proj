<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    tools:context=".login.forget.ResetPassActivity">

    <LinearLayout
        android:id="@+id/edit_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:background="@color/toolbar_color"
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize" />

        <ImageView
            android:id="@+id/rainbow"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            app:cardCornerRadius="25dp">

            <EditText
                android:id="@+id/usr_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@null"
                android:paddingLeft="10dp"
                android:password="true"
                android:singleLine="true"
                android:hint="请输入新密码" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            app:cardCornerRadius="25dp">

            <EditText
                android:id="@+id/usr_password_again"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@null"
                android:paddingLeft="10dp"
                android:password="true"
                android:singleLine="true"
                android:hint="请输确认新密码"/>

        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/login"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/right"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:layout_marginTop="30dp"
            android:padding="25dp"
            android:scaleType="center"
            app:fabCustomSize="100dp"
            android:onClick="resetEvent"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/wrong"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:background="#10000000">

        <TextView
            android:id="@+id/wrong_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="center"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="30dp"
            android:background="@android:drawable/divider_horizontal_textfield"/>

        <TextView
            android:id="@+id/wrong_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/deepskyblue"
            android:onClick="tipsLayoutGone"
            android:textSize="20sp"
            android:text="知道了"
            android:textStyle="bold"
            android:gravity="center"/>

    </LinearLayout>

</RelativeLayout>